<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:id="@+id/root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/title_bar" style="@style/titleBarLayout"
        android:weightSum="1">
        <Button android:id="@+id/menu_btn" style="@style/titleBarButton" />
        <TextView
            android:id="@+id/activity_title" android:text="Boutique" style="@style/titleBarLabel" android:layout_weight="1"/>
        <Button
            android:id="@+id/cart_btn"
            style="@style/titleBarButton"/>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                style="@style/menu_item"
                android:text="ordinateur"/>

            <TextView
                style="@style/menu_item"
                android:background="@drawable/border_bottom_focuses"
                android:text="Téléviseur"/>

            <TextView
                style="@style/menu_item"
                android:text="Tablettes"/>

            <TextView
                style="@style/menu_item"
                android:text="Téléphones"/>

            <TextView
                style="@style/menu_item"
                android:text="Montres"/>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/layout_search"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icon_search"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textColor="#666"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#666"
            android:padding="10dp"
            android:gravity="center"
            android:text="Rechercher un article"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <ScrollView
        android:background="#90000000"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <!--<LinearLayout
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="30dp"
            android:layout_height="wrap_content">

        </LinearLayout> -->

        <GridLayout
            android:id="@+id/article_grid"
            android:orientation="horizontal"
            android:padding="10dp"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





        </GridLayout>
    </ScrollView>
</LinearLayout>